{
	"include": ["**/*.ts", "**/*.tsx"],
	"compilerOptions": {
		"target": "ES2022",
		"jsx": "react-jsx",
		"module": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["vite/client"],
		
		/* Bundler mode */
		"moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
		"noEmit": true,

    /* Linting */
		"skipLibCheck": true,
		"strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
	}
}
